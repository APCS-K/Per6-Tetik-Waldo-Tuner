import java.io.*;
import java.net.URL;
import javax.sound.sampled.*;
import javax.swing.*;
public class AudioInput {
    public static void play(File inputFile) {
    	byte[] soundFileBytes =	ConversionIntoBytes();
	for (int i = 0;	i < soundFileBytes.length; i+=10) {
            transformToClip(soundFileBytes, i, i+10);
            ChangeVolume(tranformToClip);
        }
    }
    public static Clip transformToClip(byte[] byteArray, int start,int end) {
        Clip clip = AudioSystem.getClip();
	clip.open(AudioFileFormat.Type.WAVE, byteArray,	starti, end);
	return clip;
    }
    public static void changeVolume(File inputFile) {
        File soundFile = inputFile;
        try {
            AudioInputStream audioInputStream = AudioSystem.getAudioInputStream(soundFile);
            Clip clip = AudioSystem.getClip();
            clip.open(audioInputStream);
            FloatControl gainControl = (FloatControl) clip.getControl(FloatControl.Type.MASTER_GAIN);
            gainControl.setValue(50.0f); // Reduce volume by 10 decibels.                                                                          
            clip.start();
        }
        catch (Exception e) {
            System.out.println("Error");
        }
    }
    public static byte[] ConversionIntoBytes(){
        File soundFile = new File("beep-01a.wav");
        byte[] soundFileBytes = new byte[(int) (soundFile.length())];
        try {
            FileInputStream input = new FileInputStream(soundFile);
            try {
                input.read(soundFileBytes);
            }
            catch (Exception e) {
                e.printStackTrace();
            }
        }
        catch (Exception ex) {
            ex.printStackTrace();
        }
        return soundFileBytes;
    }
