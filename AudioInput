import java.io.*;
import java.net.URL;
import javax.sound.sampled.*;
import javax.swing.*;
public class AudioInput {
    public static void play(File inputFile) {
        byte[] soundFileBytes = ConversionIntoBytes();
	System.out.println(soundFileBytes.length);
	for (int i = 0;	i < soundFileBytes; i++) {
            try {
                AudioInputStream audioInputStream = AudioSystem.getAudioInputStream(inputFile);
                AudioFormat audioFormat = AudioFileFormat.getAudioFileFormat(inputFile);
                //              Clip bitClip = transformToClip.open(audioFormat, byteArray, start, size);                                          
                //changeVolume(bitClip);                                                                                                           
                Clip clip = null;
                try {
                    clip = AudioSystem.getClip();
                    clip.open(audioFormat, soundFileBytes, i, 1);
                    try {
                        FloatControl gainControl = (FloatControl) clip.getControl(FloatControl.Type.MASTER_GAIN);
                        gainControl.setValue(0f); // Reduce volume by 10 decibels.                                                                \
                                                                                                                                                   
                        clip.start();
                    }
                    catch (Exception ex) {
                        System.out.println("Error");
                    }

                }
                catch (Exception exc) {
                    exc.printStackTrace();
                }

            }
            catch (Exception e) {
                e.printStackTrace();
            }
            }
    }
    public static Clip transformToClip(AudioFormat audioFormat,byte[] byteArray, int start,int size) {
        Clip clip = null;
        try {
            clip = AudioSystem.getClip();
            clip.open(audioFormat, byteArray, start, size);
        }
        catch (Exception e) {
            e.printStackTrace();
        }
        return clip;
    }
    public static void changeVolume(Clip bitClip) {
        try {
            FloatControl gainControl = (FloatControl) bitClip.getControl(FloatControl.Type.MASTER_GAIN);
            gainControl.setValue(0f); // Reduce volume by 10 decibels.                                                                                                 
            bitClip.start();
        }
        catch (Exception e) {
            System.out.println("Error");
        }
    }
   public static byte[] ConversionIntoBytes(){
        File soundFile = new File("beep-01a.wav");
        byte[] soundFileBytes = new byte[(int) (soundFile.length())];
        try {
            FileInputStream input = new FileInputStream(soundFile);
            try {
                input.read(soundFileBytes);
            }
            catch (Exception e) {
                e.printStackTrace();
            }
        }
        catch (Exception ex) {
            ex.printStackTrace();
        }
        return soundFileBytes;
    }
