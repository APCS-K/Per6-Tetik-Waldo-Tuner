import java.io.*;
import java.net.URL;
import javax.sound.sampled.*;
import javax.swing.*;
import java.io.File;
public class AudioInput {
    public static void play(File inputFile) {
        byte[] soundFileBytes = ConversionIntoBytes();
        System.out.println(soundFileBytes.length);
        for (int i = 0; i < soundFileBytes.length; i++) {
            try {
                AudioInputStream audioInputStream = AudioSystem.getAudioInputStream(inputFile);
                AudioFormat audioFormat = audioInputStream.getFormat();
                Clip bitClip = transformToClip(audioFormat, soundFileBytes, i, 1);
                changeVolume(bitClip);
            }
            catch (Exception e) {
                e.printStackTrace();
            }
        }
    }
    public static void tester() {
        File soundFile = new File("beep-01a.wav");
        byte[] byteArray = ConversionIntoBytes();
	for (int i = 0; i < 10000; i++) {
        try {
            AudioInputStream audioInputStream = AudioSystem.getAudioInputStream(soundFile);
            Clip clip = AudioSystem.getClip();
            clip.open(audioInputStream.getFormat(), byteArray, i, 1);
            FloatControl gainControl = (FloatControl) clip.getControl(FloatControl.Type.MASTER_GAIN);
            gainControl.setValue(-10f); // Reduce volume by 10 decibels.                                                                                               
            clip.start();
            while(clip.getMicrosecondLength() < clip.getMicrosecondPosition()) { System.out.println("running");}
                    /* audioInputStream = AudioSystem.getAudioInputStream(soundFile);                                                                                  
            clip = AudioSystem.getClip();                                                                                                                              
