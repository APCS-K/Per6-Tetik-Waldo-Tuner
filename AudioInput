    public static void main(String[] args) {
        File soundFile = new File("beep-01a.wav");
        //changeVolume();                                                                                                                                              
        //byte[] data = SplitUp();                                                                                                                                     
        //System.out.println(data.length);                                                                                                                             
        play(soundFile);
    }
}

